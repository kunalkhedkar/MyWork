<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab3"
            app:fabSize="mini"
            android:layout_width="@dimen/standard_45"
            android:layout_height="@dimen/standard_45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/standard_21"
            app:srcCompat="@android:drawable/ic_btn_speak_now" />

        <TextView
            android:id="@+id/fab3Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fab3"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_21"
            android:layout_toLeftOf="@+id/fab3"
            android:text="FabTitle One"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />


        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab2"
            app:fabSize="mini"
            android:layout_width="@dimen/standard_45"
            android:layout_height="@dimen/standard_45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/standard_21"
            app:srcCompat="@android:drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/fab2Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fab2"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_21"
            android:layout_toLeftOf="@+id/fab2"
            android:text="FabTitle Two"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab1"
            app:fabSize="mini"
            android:layout_width="@dimen/standard_45"
            android:layout_height="@dimen/standard_45"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/standard_21"
            app:srcCompat="@android:drawable/ic_dialog_map" />


        <TextView
            android:id="@+id/fab1Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/fab1"
            android:layout_marginBottom="@dimen/standard_10"
            android:layout_marginTop="@dimen/standard_21"
            android:layout_toLeftOf="@+id/fab1"
            android:text="FabTitle Three"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="16dp"
            app:srcCompat="@android:drawable/ic_dialog_email" />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>