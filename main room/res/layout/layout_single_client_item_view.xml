<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_width="match_parent"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="6dp"
    android:layout_height="wrap_content">


    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/image"
        android:layout_width="70dp"
        android:layout_height="70dp" />

    <TextView
        android:singleLine="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image"
        android:text="kunal HOTEL"
        android:textStyle="bold"
        android:textSize="22sp"
        android:id="@+id/business_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:singleLine="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image"
        android:textSize="18sp"
        android:text="Sinhgad orad"
        android:layout_below="@+id/business_name"
        android:id="@+id/address_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:singleLine="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/image"
        android:textSize="16sp"
        android:text="kunal khedkar"
        android:layout_below="@+id/address_area"
        android:id="@+id/client_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:layout_below="@+id/client_name"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#d3d3d3"
        />

</RelativeLayout>
